set nocompatible
filetype off

"" Package managment
source ~/.vim/bundles
"" Package specific settings
for f in split(glob('~/.vim/settings.d/*'), '\n')
        exe 'source' f
endfor
"" Keymaps
source ~/.vim/keymaps
"" Aliases
source ~/.vim/aliases

"" ## Common options
"" Tab Settings
set noswapfile
set smarttab smartindent
set number

colorscheme tomorrownight
hi Normal ctermbg=none

filetype plugin indent on 

autocmd FileType python setlocal et ts=4 sw=4
autocmd FileType coffee setlocal et ts=2 sw=2

